<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_advice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".fragments.AdviceFragment">

    <ImageView
        android:id="@+id/image_advice"
        android:layout_width="@dimen/width350"
        android:layout_height="@dimen/height210"
        android:layout_marginStart="@dimen/marginStart10"
        android:layout_marginTop="@dimen/marginTop10"
        android:layout_marginEnd="@dimen/marginEnd10"
        android:src="@drawable/health_advice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/image" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/advice_rv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/marginStart10"
        android:layout_marginTop="@dimen/marginTop30"
        android:layout_marginEnd="@dimen/marginEnd10"
        android:layout_marginBottom="@dimen/marginBottom10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_advice" />

</androidx.constraintlayout.widget.ConstraintLayout>