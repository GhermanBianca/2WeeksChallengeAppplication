<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin10"
    app:cardCornerRadius="@dimen/cornerRadius5"
    app:cardElevation="@dimen/elevation5"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_green">

        <TextView
            android:id="@+id/advice_type_title_tv"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginStart10"
            android:layout_marginTop="@dimen/marginTop10"
            android:layout_marginEnd="@dimen/marginEnd10"
            android:text="@string/description_advice_title"
            android:textColor="@color/dark_green"
            android:textSize="@dimen/size17"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/advice_type_description_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginStart10"
            android:layout_marginTop="@dimen/marginTop5"
            android:layout_marginEnd="@dimen/marginEnd10"
            android:layout_marginBottom="@dimen/marginBottom10"
            android:text="@string/content_advice"
            android:textColor="@color/green1"
            android:textSize="@dimen/size15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/advice_type_title_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
